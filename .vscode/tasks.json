{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "make",
            "args": [
                "-j",
                "4",
                "debug",
            ],
            "options": {
                "cwd": "."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "run",
            "command": "",
            "args": [
                "sh -c 'cd ./bin/ && ./output.exe'"
            ],
            "options": {
                "cwd": "."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}